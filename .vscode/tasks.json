{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe 生成活动文件",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/nologo",
        "/Fe:",
        "${workspaceFolder}\\bin\\${workspaceFolderBasename}.exe",
        "${workspaceFolder}\\src\\*.cpp",
        "/I",
        "${workspaceFolder}\\include\\"
      ],
      "options": {
        "cwd": "${workspaceFolder}\\bin"
      },
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "编译器: cl.exe"
    }
  ]
}
